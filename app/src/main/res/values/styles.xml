<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tema principal -->
    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color1</item>
        <item name="colorPrimaryDark">@color/color1Dark</item>
        <item name="colorAccent">@color/colorOtro</item>
        <!-- Estilo para los botones -->
        <item name="buttonStyle">@style/AppBoton</item>
        <!-- Estilo para los textos -->
        <item name="android:textViewStyle">@style/AppTextView</item>
    </style>


    <style name="AppBoton" parent="Widget.AppCompat.Button">
        <!-- Fondo del botón -->
        <item name="android:background">@drawable/fondo_boton</item>
        <!-- Tamaño del texto -->
        <item name="android:textSize">16sp</item>
        <!-- Color del texto -->
        <item name="android:textColor">#FAE0E0</item>
        <!-- Alineación del texto en el botón -->
        <item name="android:gravity">center</item>
        <!-- Efecto de elevación -->
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Estilo para los textos de la app -->
    <style name="AppTextView" parent="Widget.AppCompat.TextView">
        <!-- Tamaño del texto -->
        <item name="android:textSize">18sp</item>
        <!-- Color del texto -->
        <item name="android:textColor">@android:color/black</item>

    </style>

    <!-- Estilo para los textos de los dialogos -->
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/color1Dark</item>
    </style>

    <style name="Widget.PrimeraEntregaDAS.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">@color/colorOtroDarkTheme</item>
    </style>

    <style name="Widget.PrimeraEntregaDAS.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>